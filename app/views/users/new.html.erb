<% if @user.errors.any? %>

	<div class="alert alert-danger">
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			
			<li><%= message %> </li>
				
			<% end %>
		</ul>
	</div>

<% end %>


<div class="panel panel_default">
	<div class="panel_heading">S'incrire</div>	
	
	<div class="panel_body">
		
	<%= form_for @user, html: {class: 'form-horizontal'}  do |f| %>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
		<div class="form-group">
			<%= f.label :last_name, "Nom d'utilisateur", class: 'col-md-4 control_label' %>
			
			<div class="col-md-m6">
				<%= f.text_field :last_name, class: 'form-control' %>
			</div>
				
		</div>

		


	<div class="form-group">
			<%= f.label :email, "Email", class: 'col-md-4 control_label' %>
			
			<div class="col-md-m6">
				<%= f.email_field :email, class: 'form-control' %>
			</div>
				
		</div>


	<div class="form-group">
				<%= f.label :password, "Mot de passe", class: 'col-md-4 control_label' %>
				
				<div class="col-md-m6">
					<%= f.password_field :password, class: 'form-control' %>
				</div>
					
			</div>

<div class="form-group">
				<%= f.label :password_confirmation, "Confirmer le mot de passe", class: 'col-md-4 control_label' %>
				
				<div class="col-md-m6">
					<%= f.password_field :password_confirmation, class: 'form-control' %>
				</div>
					
			</div>

		 <div class="form-group">
		 	<div class="col-md-offset-4 col-md-m6">
		 		<button type="submit" class="btn btn-primary">
					S'inscrire
		 		</button>
		 	</div>
		 </div>
			



		
				<% end %>
				
	</div>

</div>